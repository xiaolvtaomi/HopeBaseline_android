<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ListViewStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">1.0px</item>
    </style>
    
    <style name="Theme.Light.CustomDialog" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@drawable/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#ff555555</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>

    <style name="Theme.Light.FullScreenDialogAct" parent="@style/BaseDialog">
        <item name="android:windowBackground">@drawable/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#ff555555</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>

    <style name="BaseDialog" parent="@android:style/Theme.Dialog" />

    <style name="Style_Dialog_Button">
        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">#ff425968</item>
        <item name="android:background">@drawable/btn_default</item>
        <item name="android:layout_marginLeft">6.0dip</item>
        <item name="android:layout_marginRight">6.0dip</item>
        <item name="android:minHeight">40.0dip</item>
    </style>

    <style name="ButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:textSize">13.0sp</item>
        <item name="android:textColor">@color/font_value</item>
        <item name="android:background">@drawable/btn_default</item>
    </style>

    <style name="TextViewStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/font_value</item>
        <item name="android:textColorHint">@color/light_notes_color</item>
        <item name="android:textColorLink">@color/link_color</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textColorHint">@color/light_notes_color</item>
        <item name="android:background">@drawable/edittext_default</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="AppBaseTheme" parent="@android:style/Theme.Light.NoTitleBar" />

    <style name="Theme.App" parent="@style/AppBaseTheme">
        <item name="android:colorForeground">@color/font_value</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:editTextStyle">@style/EditTextStyle</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="android:textColorLink">@color/link_color</item>
    </style>

    <style name="Animation.Dialog" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <style name="Popup_Animation_DownScale" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/enter_dropdown</item>
        <item name="android:windowExitAnimation">@anim/exit_scale</item>
    </style>

    <style name="Popup_Animation_PushDownUp" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_up_in</item>
        <item name="android:windowExitAnimation">@anim/push_up_out</item>
    </style>

    <style name="Popup_Animation_DownUp" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/enter_dropdown</item>
        <item name="android:windowExitAnimation">@anim/exit_dropup</item>
    </style>

    <style name="Popup_Animation_UpDown" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/enter_dropup</item>
        <item name="android:windowExitAnimation">@anim/exit_dropdown</item>
    </style>

    <style name="Popup_Animation_ScaleScale" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/enter_scale</item>
        <item name="android:windowExitAnimation">@anim/exit_scale</item>
    </style>

    <style name="Popup_Animation_Alpha" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/layout_alpha_in</item>
        <item name="android:windowExitAnimation">@anim/layout_alpha_out</item>
    </style>

    <style name="Popup_Animation_SlideUp" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/enter_dropup</item>
        <item name="android:windowExitAnimation">@anim/exit_dropdown</item>
    </style>
    
    <style name="rent_icon_style">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">1.0dip</item>
        <item name="android:paddingRight">1.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">18.0dip</item>
        <item name="android:layout_marginRight">5.0dip</item>
    </style>
    <style name="rent_user_info_style">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ff666666</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingRight">10.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="list_item_name">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ff333333</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    <style name="user_status_style">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#ff666666</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="rent_time_style">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#ff999999</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    
    <style name="setting_mainframe">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">13dip</item>
        <item name="android:paddingRight">13dip</item>
        <item name="android:paddingTop">7dip</item>
        <item name="android:paddingBottom">13dip</item>
    </style>

    <style name="setting_group">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">7dip</item>
        <item name="android:layout_marginBottom">7dip</item>
        <item name="android:background">@drawable/commonusewhite</item>
    </style>

    <style name="setting_item">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="setting_line">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/divider</item>
    </style>

    <style name="setting_label">
        <item name="android:layout_width">80dip</item>
        <!-- item name="android:layout_width">68dip</item -->
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">#999999</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginLeft">15dip</item>
        <item name="android:gravity">right</item>
    </style>
    
    <style name="setting_menu">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:drawableRight">@drawable/pointer</item>
        <item name="android:minHeight">44.7dip</item>
    </style>

</resources>